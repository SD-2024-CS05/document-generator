{
  "$schema": "https://json-schema.org/draft-07/schema",
  "type": "object",
  "properties": {
    "actionType": {
      "type": "string",
      "enum": [ "select" ]
    },
    "name": { "type": "string" },
    "disabled": { "type": "boolean" },
    "options": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "value": { "type": "string" },
          "label": { "type": "string" },
          "disabled": { "type": "boolean" }
        },
        "required": [ "value", "label" ]
      }
    },
    "conditions": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": [ "selectedOption", "disabled" ]
          },
          "state": { "type": "boolean" },
          "matchValue": { "type": "string" }
        }
      }
    }
  }
}
  
