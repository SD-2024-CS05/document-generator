{
  "$schema": "https://json-schema.org/draft-07/schema",
  "type": "object",
  "properties": {
    "actionType": { "type": "string", "enum": [ "a" ] },
    "href": { "type": "string" },
    "target": { "type": "string" },
    "rel": { "type": "string" },
    "conditions": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": [ "click", "href", "rel" ]
          },
          "state": { "type": "boolean" },
          "matchValue": { "type": "string" }
        }
      }
    }
  },
  "required": [ "href" ]
}
