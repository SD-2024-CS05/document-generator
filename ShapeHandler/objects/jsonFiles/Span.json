{
  "$schema": "https://json-schema.org/draft-07/schema",
  "type": "object",
  "properties": {
    "actionType": {
      "type": "string",
      "enum": [ "span" ]
    },
    "id": { "type": "string" },
    "class": { "type": "string" },
    "conditions": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": [ "innerText", "visibility" ]
          },
          "state": { "type": "boolean" },
          "matchValue": { "type": "string" }
        }
      }
    }
  }
}
