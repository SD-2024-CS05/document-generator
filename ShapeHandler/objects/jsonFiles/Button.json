{
  "$schema": "https://json-schema.org/draft-07/schema",
  "properties": {
    "actionType": {
      "type": "string",
      "enum": [ "button" ]
    },
    "type": {
      "enum": [ "button", "submit", "reset" ],
      "type": "string"
    },
    "value": { "type": "string" },
    "disabled": { "type": "boolean" },
    "name": { "type": "string" },
    "conditions": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": [ "click", "doubleClick", "disabled", "text" ]
          },
          "state": { "type": "boolean" },
          "matchValue": { "type": "string" }
        }
      }
    }
  },
  "required": [ "type" ],
  "type": "object"
}
