{
  "$schema": "https://json-schema.org/draft-07/schema",
  "type": "object",
  "properties": {
    "actionType": {
      "type": "string",
      "enum": [ "img" ]
    },
    "src": {
      "type": "string",
      "format": "uri"
    },
    "alt": { "type": "string" },
    "width": { "type": "number" },
    "height": { "type": "number" },
    "conditions": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": [ "src", "alt", "load", "width", "height" ]
          },
          "state": { "type": "boolean" },
          "matchValue": { "type": "string" }
        }
      }
    }
  },
  "required": [ "src" ]
}
