{
  "$schema": "https://json-schema.org/draft-07/schema",
  "type": "object",
  "properties": {
    "type": { "type": "string" },
    "value": { "type": "string" },
    "disabled": { "type": "boolean" },
    "name": { "type": "string" },
    "placeholder": { "type": "string" },
    "conditions": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": [ "value", "focus", "disabled" ]
          },
          "state": { "type": "boolean" },
          "matchValue": {
            "type": "string",
            "pattern": "^[A-Za-z0-9\\s]+$"
          }
        }
      }
    }
  },
  "required": [ "type" ]
}